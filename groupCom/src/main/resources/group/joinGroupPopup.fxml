<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group.JoinGroupPopupController">
    <!-- Instructions -->
    <Label text="Enter Group Name and Join Key" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <!-- Group Name -->
    <TextField fx:id="groupNameField" promptText="Group Name" />

    <!-- Group Join Key -->
    <TextField fx:id="groupJoinKeyField" promptText="Group Join Key" />

    <!-- Error Message (will be shown if invalid) -->
    <Label fx:id="errorMessageLabel" text="" style="-fx-text-fill: red;" />

    <!-- Join Button -->
    <Button text="Join Group" onAction="#handleJoinGroup" />
</VBox>
