<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group.CreateGroupPopupController" spacing="10" alignment="CENTER">
    <Label text="Create New Group" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <TextField fx:id="groupNameField" promptText="Enter group name" />
    <TextArea fx:id="groupDescriptionField" promptText="Enter group description" />
    <Button text="Create Group" onAction="#handleCreateGroup" style="-fx-font-size: 14px;" />
    <Label fx:id="statusLabel" textFill="red" />
</VBox>
